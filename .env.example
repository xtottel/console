# .env.example
# Database
DATABASE_URL="postgresql://user:password@localhost:5432/sendexa?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
API_KEY_SECRET="your-api-key-secret-min-32-chars"

# Email (Nodemailer)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Svix (Webhooks)
SVIX_API_KEY="sk_xxx"
SVIX_BASE_URL="https://api.svix.com"

# Inngest (Background Jobs)
INNGEST_SIGNING_KEY="signing-key"
INNGEST_EVENT_KEY="event-key"

# Tinybird (Analytics)
TINYBIRD_TOKEN="p.xxx"

# App
NODE_ENV="development"
PORT="3000"
SANDBOX_MODE="true"